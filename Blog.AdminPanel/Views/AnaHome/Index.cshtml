
@using Blog.Entities
@model List<Post>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAnaSite.cshtml";
}

<section id="blog" class="blog-mf sect-pt4 route">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="title-box text-center">
                    <h3 class="title-a">
                        Blog
                    </h3>
                    <p class="subtitle-a">
                        Lorem ipsum, dolor sit amet consectetur adipisicing elit.
                    </p>
                    <div class="line-mf"></div>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (Post post in Model)
            {
                <div class="col-md-4" data-post-id="@post.Id">
                    <div class="card card-blog">
                        <div class="card-img">
                            <a href="blog-single.html"><img src="~/images/@post.PostImageFilename" alt="" class="img-fluid"></a>
                        </div>
                        <div class="card-body">
                            <div class="card-category-box">
                                <div class="card-category" data-post-id="@post.Id">
                                    <h6 class="category">@post.Title</h6>
                                </div>
                            </div>
                            <h3 class="card-title"><a href="blog-single.html"></a></h3>
                            @if (string.IsNullOrEmpty(post.Text) == false && post.Text.Length > 250)
                            {
                                <p class="card-description">
                                    @(post.Text.Substring(0, 250) + "...")
                                </p>
                            }
                            else
                            {
                                <p class="card-description">
                                    @post.Text
                                </p>
                            }
                        </div>
                        <div class="card-footer">
                            <div class="post-author">
                                <a href="#">
                                    <img src="~/images/@post.Owner.ProfileImageFilename" alt="" class="avatar rounded-circle">
                                    <span class="author">@post.ModifiedName</span>
                                </a>
                            </div>
                            <div class="post-date">
                                <span class="ion-ios-clock-outline"></span> @post.ModifiedOn.ToString("dd.MM.yyyy")
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
