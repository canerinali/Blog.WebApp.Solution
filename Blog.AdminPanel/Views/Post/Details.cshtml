@model Blog.Entities.Post
@{
    ViewBag.Title = "Post Detay";
}
<div class="row">
    <div class="container">
        <div class="col-12">
            <h4 class="text-center">@ViewBag.Title</h4>
            <hr />
            <dl class="col-10 text-lg">
                <dt>
                    @Html.DisplayNameFor(model => model.Category.Title)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Category.Title)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Title)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Title)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Text)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Text)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.IsDraft)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.IsDraft)
                </dd>
            </dl>
            <br />
            <div class="row">
                <div class="col-12 text-center">
                    <p>
                        <a href="/Post/Edit/@Model.Id" class="btn btn-warning" title="Düzenle">
                            <span class="fa fa-edit"> Düzenle</span>
                        </a>
                        <a href="/Post/Index" class="btn btn-default">
                            <span class="fa fa-arrow-circle-left"> Geri Dön</span>
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>