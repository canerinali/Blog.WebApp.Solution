@model IEnumerable<Blog.Entities.Post>
@{
    ViewBag.Title = "Notlarım";
}
<div class="container">
    <div class="row">
        <div class="col-md-12 col-md-offset-1">
            <h2 class="text-center">@ViewBag.Title</h2>
            <hr />
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 col-md-offset-1">
            <p>
                <a href="/Post/Create" class="btn btn-primary">
                    <span class="fa fa-edit"> Yeni</span>
                </a>
            </p>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Category.Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Text)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsDraft)
                    </th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Category.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Text)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsDraft)
                        </td>

                        <td width="250">
                            <button type="button" class="btn btn-xs" data-toggle="modal" data-target="#modal_comment" data-note-id="@item.Id">
                                   <span class="fa fa-comments"></span>
                            </button>

                            <a href="/Post/Edit/@item.Id" class="btn btn-xs" title="Düzenle">
                                <span class="fa fa-edit"></span>
                            </a>

                            <a href="/Post/Details/@item.Id" class="btn btn-xs" title="Detaylar">
                                <span class="fa fa-search"></span>
                            </a>

                            <a href="/Post/Delete/@item.Id" class="btn btn-xs" title="Kaldır">
                                <span class="fa fa-trash"></span>
                            </a>
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>

@Bootstrap.ModalPopup(id: "modal_comment", title: "Yorumlar")

<script>
    $(function () {
        $('#modal_comment').on('show.bs.modal', function (e) {
            $("modal_comment_body").load("/Comment/ShowNoteComments");
        })
    });

</script>